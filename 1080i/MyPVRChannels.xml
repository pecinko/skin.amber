							<posy>3</posy>
							<width>90</width>
							<height>90</height>
							<texture>$INFO[ListItem.Icon]</texture>
							<aspectratio>keep</aspectratio>
						</control>
						<control type="label" description="Number">
							<visible>!Skin.HasSetting(HideEPGLogos)</visible>
