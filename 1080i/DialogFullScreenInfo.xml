<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
  <defaultcontrol always="true">9000</defaultcontrol>
  <animation effect="slide" start="0,-500" end="0,0" time="450" tween="quadratic" easing="out">WindowOpen</animation>
    <animation effect="slide" start="0,0" end="0,-500" time="300" tween="quadratic" easing="in">WindowClose</animation>
	<animation effect="fade" start="0" end="100" time="380">WindowOpen</animation>
	<animation effect="fade" start="100" end="0" time="100" delay="150">WindowClose</animation>
  <zorder>2</zorder>
  <controls>
    <control type="button" id="9000">
      <include>HiddenButton</include>
      <onclick>close</onclick>
	  <ondown>close</ondown>
	  <onup>close</onup>
	  <onleft>close</onleft>
	  <onright>close</onright>
    </control>
    <control type="group">
      <control type="image" description="Background">
        <posx>0</posx>
        <posy>0</posy>
        <width>1920</width>
        <height>291</height>
        <texture flipy="true">OSD/OSDBackground.png</texture>
        <colordiffuse>BBFFFFFF</colordiffuse>
      </control>
      <control type="label" description="Clock">
        <posx>27r</posx>
        <posy>15</posy>
        <width>195</width>
        <height>60</height>
        <align>right</align>
        <aligny>center</aligny>
        <font>size18</font>
        <label>$INFO[System.Time, , ]</label>
      </control>
      <control type="label" description="End time">
        <posx>27r</posx>
        <posy>57</posy>
        <width>195</width>
        <height>60</height>
        <align>right</align>
        <aligny>center</aligny>
        <font>size17</font>
        <textcolor>Grey</textcolor>
        <label>$INFO[Player.FinishTime,(,)]</label>
      </control>
      <control type="group">
        <posy>-60</posy>
        <control type="image">
          <visible>VideoPlayer.Content(Movies)</visible>
          <posx>15</posx>
          <posy>69</posy>
          <width>180</width>
          <height>240</height>
          <bordersize>8</bordersize>
          <texture>$INFO[VideoPlayer.Cover]</texture>
          <aspectratio align="left">stretch</aspectratio>
        </control>
        <control type="image">
          <visible>VideoPlayer.Content(Movies)</visible>
          <posx>15</posx>
          <posy>69</posy>
          <width>180</width>
          <height>240</height>
          <texture border="3">img/CoverOverlay0.png</texture>
          <bordersize>8</bordersize>
        </control>
        <control type="image">
          <visible>!VideoPlayer.Content(Movies)</visible>
          <posx>15</posx>
          <posy>72</posy>
          <width>240</width>
          <height>240</height>
          <bordersize>8</bordersize>
          <texture>$INFO[VideoPlayer.Cover]</texture>
          <aspectratio aligny="top">keep</aspectratio>
        </control>
        <control type="group">
          <posx>-30</posx>
          <posy>66</posy>
          <control type="label" description="Main label">
            <visible>![VideoPlayer.Content(MusicVideos) | VideoPlayer.Content(Episodes)]</visible>
            <include>FullscreenInfoLabelMain</include>
            <label>$INFO[VideoPlayer.ChannelNumber,,.]$INFO[VideoPlayer.ChannelName,,: ]$INFO[VideoPlayer.Title]</label>
          </control>
          <control type="label" description="Main label">
            <visible>VideoPlayer.Content(MusicVideos)</visible>
            <include>FullscreenInfoLabelMain</include>
            <label>$INFO[VideoPlayer.Artist]</label>
          </control>
          <control type="label" description="Main label">
            <visible>VideoPlayer.Content(Episodes)</visible>
            <include>FullscreenInfoLabelMain</include>
            <label>$INFO[VideoPlayer.Title]</label>
          </control>
          <control type="label" description="Label 2">
            <visible>VideoPlayer.Content(MusicVideos)</visible>
            <include>FullscreenInfoLabel2</include>
            <label>$INFO[VideoPlayer.Album]</label>
          </control>
          <control type="label" description="Label 2">
            <visible>Player.ChapterCount + !VideoPlayer.Content(LiveTV)</visible>
            <include>FullscreenInfoLabel2</include>
            <label>$LOCALIZE[21396]$INFO[Player.Chapter, : ]$INFO[Player.ChapterCount, / ]</label>
          </control>
          <control type="label" description="Label 2">
            <visible>VideoPlayer.Content(Episodes)</visible>
            <include>FullscreenInfoLabel2</include>
            <label>$INFO[VideoPlayer.TVShowTitle] - $LOCALIZE[20373] $INFO[VideoPlayer.Season], $LOCALIZE[20359] $INFO[VideoPlayer.Episode]</label>
          </control>
          <control type="label" description="Label 2">
            <visible>VideoPlayer.Content(LiveTV)</visible>
            <include>FullscreenInfoLabel2</include>
            <label>$INFO[VideoPlayer.ChannelGroup,$LOCALIZE[31509]: ]</label>
          </control>
          <control type="textbox">
            <posx>300</posx>
            <posy>112</posy>
            <width>1275</width>
            <height>125</height>
            <label>$INFO[VideoPlayer.Plot]</label>
            <autoscroll>false</autoscroll>
            <font>InfoPlot</font>
          </control>
        </control>
        <control type="grouplist">
          <posx>1710</posx>
          <width>90</width>
          <posy>96</posy>
          <height>195</height>
          <itemgap>30</itemgap>
          <orientation>vertical</orientation>
          <align>right</align>
          <aligny>bottom</aligny>
          <control type="image">
            <height>45</height>
            <width>90</width>
            <posx>0</posx>
            <posy>0</posy>
            <bordersize>3</bordersize>
            <aspectratio>keep</aspectratio>
            <colordiffuse>Silver</colordiffuse>
            <texture>$INFO[VideoPlayer.VideoResolution,badges/video/,.png]</texture>
          </control>
          <control type="image">
            <visible>!IsEmpty(VideoPlayer.VideoCodec)</visible>
            <height>45</height>
            <width>90</width>
            <bordersize>3</bordersize>
            <aspectratio>keep</aspectratio>
            <colordiffuse>Silver</colordiffuse>
            <texture>$INFO[VideoPlayer.VideoCodec,badges/video/,.png]</texture>
          </control>
        </control>
        <control type="grouplist">
          <posx>1809</posx>
          <width>90</width>
          <posy>96</posy>
          <height>195</height>
          <itemgap>30</itemgap>
          <orientation>vertical</orientation>
          <align>right</align>
          <aligny>bottom</aligny>
          <control type="image">
            <visible>!IsEmpty(VideoPlayer.AudioChannels)</visible>
            <height>45</height>
            <width>90</width>
            <bordersize>3</bordersize>
            <aspectratio>keep</aspectratio>
            <colordiffuse>Silver</colordiffuse>
            <texture>$INFO[VideoPlayer.AudioChannels,badges/channels,.png]</texture>
          </control>
          <control type="image">
            <visible>!IsEmpty(VideoPlayer.AudioCodec)</visible>
            <height>45</height>
            <width>90</width>
            <bordersize>3</bordersize>
            <aspectratio>keep</aspectratio>
            <colordiffuse>Silver</colordiffuse>
            <texture>$INFO[VideoPlayer.AudioCodec,badges/audio/,.png]</texture>
          </control>
        </control>
      </control>
    </control>
  </controls>
</window>
