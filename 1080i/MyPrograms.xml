<window>
  <defaultcontrol always="true">50</defaultcontrol>
  <controls>
    <control type="group" description="fanart">
      <include>Fanart_Art</include>
    </control>
    <include>View_50</include>
    <include>View_51_Panel_Music</include>
    <!--<include>View_52_BigList</include>-->
    <include>View_53_Grid</include>
    <include>View_54_LowList</include>
    <include>View_55_BigPanel</include>
    <include>View_56_BannerList</include>
    <!-- Showcase 57, 
						58 & 59 -->
    <include>View_59_Showcase</include>
    <!-- LIST 50 -->
    <control type="group" description="MediaInfo List 50">
      <visible>Control.IsVisible(50)</visible>
      <control type="image" description="Thumb BG">
        <posx>60</posx>
        <posy>480</posy>
        <width>555</width>
        <height>555</height>
        <bordersize>-29</bordersize>
        <texture>thumbs/SquareBG_NF.png</texture>
        <aspectratio>scale</aspectratio>
      </control>
      <control type="image" description="Thumb">
        <posx>60</posx>
        <posy>480</posy>
        <width>555</width>
        <height>555</height>
        <include>Icon_Fade</include>
        <texture background="true" fallback="DefaultFile.png" diffuse="thumbs/SquareDiffuse.png">$INFO[ListItem.thumb]</texture>
        <aspectratio aligny="top" scalediffuse="false">scale</aspectratio>
      </control>
    </control>
    <!-- LIST 55 Big Panel -->
    <control type="group" description="55 MediaInfo">
      <visible>Control.IsVisible(55)</visible>
      <posx>60</posx>
      <posy>100</posy>
      <control type="label" description="Title Label">
        <posy>18</posy>
        <width>630</width>
        <height>50</height>
        <aligny>bottom</aligny>
        <textcolor>Orange</textcolor>
        <font>InfoTitle</font>
        <wrapmultiline>true</wrapmultiline>
        <label>$INFO[ListItem.Label]</label>
      </control>
      <control type="label" description="Details">
        <posy>108</posy>
        <height>33</height>
        <width>630</width>
        <font>Details</font>
        <label>$VAR[Details]</label>
      </control>
      <control type="label" description="Genre">
        <posy>153</posy>
        <height>33</height>
        <width>630</width>
        <scroll>false</scroll>
        <font>Details</font>
        <label>$INFO[ListItem.Genre]</label>
      </control>
      <control type="textbox" description="Plot51">
        <posx>0</posx>
        <posy>221</posy>
        <width>630</width>
        <height>540</height>
        <align>left</align>
        <label>$VAR[Plots]</label>
      </control>
      <control type="grouplist" description="Flags">
        <visible>!ListItem.IsFolder</visible>
        <posy>780</posy>
        <width min="90" max="650">auto</width>
        <height>120</height>
        <itemgap>30</itemgap>
        <orientation>horizontal</orientation>
        <align>left</align>
        <aligny>bottom</aligny>
        <control type="image">
          <visible>!IsEmpty(ListItem.AudioCodec)</visible>
          <height>45</height>
          <width>90</width>
          <bordersize>3</bordersize>
          <aspectratio>keep</aspectratio>
          <colordiffuse>Silver</colordiffuse>
          <texture>$INFO[ListItem.AudioCodec,badges/audio/,.png]</texture>
        </control>
        <control type="image">
          <visible>!IsEmpty(ListItem.AudioChannels)</visible>
          <height>45</height>
          <width>90</width>
          <bordersize>3</bordersize>
          <aspectratio>keep</aspectratio>
          <colordiffuse>Silver</colordiffuse>
          <texture>$INFO[ListItem.AudioChannels,badges/channels,.png]</texture>
        </control>
        <control type="image">
          <visible>!IsEmpty(ListItem.VideoCodec)</visible>
          <height>45</height>
          <width>90</width>
          <bordersize>3</bordersize>
          <aspectratio>keep</aspectratio>
          <colordiffuse>Silver</colordiffuse>
          <texture>$INFO[ListItem.VideoCodec,badges/video/,.png]</texture>
        </control>
        <control type="image">
          <visible>!IsEmpty(ListItem.VideoResolution) + IntegerGreaterThan(ListItem.VideoResolution,710)</visible>
          <height>45</height>
          <width>90</width>
          <posx>0</posx>
          <posy>0</posy>
          <bordersize>3</bordersize>
          <aspectratio>keep</aspectratio>
          <colordiffuse>Silver</colordiffuse>
          <texture>$INFO[ListItem.VideoResolution,badges/video/,.png]</texture>
        </control>
      </control>
      <control type="image" description="Rating">
        <posx>-3</posx>
        <posy>840</posy>
        <include>Stars</include>
      </control>
      <control type="label" description="Addon version">
        <visible>Container.Content(addons)</visible>
        <posy>840</posy>
        <width>800</width>
        <height>33</height>
        <font>Details</font>
        <label>$INFO[ListItem.Label2,$LOCALIZE[19114] : ]</label>
      </control>
    </control>
    <!-- LOWLIST 54 -->
    <control type="group" description="MediaInfo List 50">
      <posx>80</posx>
      <posy>630</posy>
      <visible>Control.IsVisible(54)</visible>
      <control type="image" description="Thumb BG">
        <width>420</width>
        <height>420</height>
        <bordersize>-22</bordersize>
        <texture>thumbs/SquareBG_NF.png</texture>
        <aspectratio>scale</aspectratio>
      </control>
      <control type="image" description="Thumb">
        <width>420</width>
        <height>420</height>
        <include>Icon_Fade</include>
        <texture background="true" fallback="DefaultFolder.png" diffuse="thumbs/SquareDiffuse.png">$INFO[ListItem.thumb]</texture>
        <aspectratio aligny="top" scalediffuse="false">scale</aspectratio>
      </control>
    </control>
    <include>Time</include>
    <control type="group" description="Side menu 9000 group">
      <include>9000Commons</include>
      <control type="grouplist" id="9000">
        <include>9000GrouplistParameters</include>
        <control type="button" id="3" description="Sort">
          <include>9000SysButtons</include>
        </control>
        <control type="togglebutton" id="4" description="SortMode">
          <alttexturenofocus>-</alttexturenofocus>
          <include>9000SysButtons</include>
          <label>$LOCALIZE[21429]: $LOCALIZE[21430]</label>
          <altlabel>$LOCALIZE[21429]: $LOCALIZE[21431]</altlabel>
        </control>
        <control type="button" id="699" description="Playing">
          <enable>Player.HasMedia</enable>
          <include>9000SysButtons</include>
          <label>$LOCALIZE[16003]</label>
          <onclick>fullscreen</onclick>
        </control>
      </control>
    </control>
  </controls>
</window>