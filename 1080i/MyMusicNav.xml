<window>
  <backgroundcolor>0</backgroundcolor>
  <defaultcontrol always="true">50</defaultcontrol>
  <include>OpenClose</include>
  <controls>
    <control type="group" description="fanart">
      <include>Fanart_Art</include>
    </control>
    <include>View_50</include>
    <include>View_51_Panel_Music</include>
    <include>View_52_BigList</include>
    <include>View_53_Grid</include>
    <include>View_54_LowList</include>
    <include>View_55_BigPanel</include>
    <include>View_56_BannerList</include>
    <!-- Showcase 57 58 & 59 -->
    <include>View_59_Showcase</include>
    <control type="group" description="Showcase trigger">
      <animation effect="slide" easing="out" start="0,0" end="0,-90" time="350" delay="0" center="120,350" reversible="true" condition="Control.HasFocus(7000)">Conditional</animation>
      <include>Time</include>
    </control>
    <!-- LIST 50 -->
    <control type="group" description="MediaInfo List 50">
      <visible>Control.IsVisible(50)</visible>
      <control type="image" description="Thumb BG">
        <posx>60</posx>
        <posy>480</posy>
        <width>555</width>
        <height>555</height>
        <bordersize>-28</bordersize>
        <include>SquareThumbBG</include>
      </control>
      <control type="image" description="Thumb">
        <posx>60</posx>
        <posy>480</posy>
        <width>555</width>
        <height>555</height>
        <include>Icon_Fade</include>
        <include>SquareThumb</include>
      </control>
    </control>
    <!-- LIST 52 BigList -->
    <control type="group" description="52 MediaInfo">
      <visible>Control.IsVisible(52)</visible>
      <include>OpenClose</include>
      <include>View_52_BigList</include>
      <control type="group" description="Thumbs">
        <posy>0</posy>
        <control type="image" description="Thumb">
          <visible>![[Container.Content(albums) + Skin.HasSetting(52_Albums_UseFanart)] | [Container.Content(artists) + Skin.HasSetting(52_Artists_UseFanart)]]</visible>
          <posx>54</posx>
          <posy>81</posy>
          <width>812</width>
          <height>522</height>
          <include>Icon_Fade</include>
          <texture background="true">$VAR[Thumbs]</texture>
          <include>ThumbBorder</include>
          <aspectratio align="center" aligny="bottom">keep</aspectratio>
        </control>
        <control type="image" description="fanart">
          <visible>[Container.Content(albums) + Skin.HasSetting(52_Albums_UseFanart)] | [Container.Content(artists) + Skin.HasSetting(52_Artists_UseFanart)]</visible>
          <posx>54</posx>
          <posy>81</posy>
          <width>812</width>
          <height>522</height>
          <include>Icon_Fade</include>
          <texture background="true">$INFO[ListItem.Art(fanart)]</texture>
          <include>ThumbBorder</include>
          <aspectratio align="center" aligny="bottom">keep</aspectratio>
        </control>
      </control>
      <control type="group" description="Media info">
        <posx>60</posx>
        <posy>390</posy>
        <control type="label" description="Title Label">
          <posy>240</posy>
          <width>800</width>
          <height>60</height>
          <textcolor>Orange</textcolor>
          <scroll>false</scroll>
          <label>$INFO[ListItem.Label]</label>
        </control>
        <control type="textbox" description="Plot51">
          <posx>0</posx>
          <posy>300</posy>
          <width>800</width>
          <height>300</height>
          <label>$VAR[Plots]</label>
        </control>
      </control>
    </control>
    <!-- LOWLIST 54 -->
    <control type="group" description="MediaInfo List 50">
      <posx>80</posx>
      <posy>630</posy>
      <visible>Control.IsVisible(54)</visible>
      <control type="image" description="Thumb BG">
        <width>420</width>
        <height>420</height>
        <bordersize>-22</bordersize>
        <include>SquareThumbBG</include>
      </control>
      <control type="image" description="Thumb">
        <width>420</width>
        <height>420</height>
        <include>Icon_Fade</include>
        <include>SquareThumb</include>
      </control>
    </control>
    <!-- LIST 55 Big Panel -->
    <control type="group" description="55">
      <visible>Control.IsVisible(55)</visible>
      <include>OpenClose</include>
      <include>View_55_BigPanel</include>
      <control type="group" description="55 MediaInfo">
        <visible>!Skin.HasSetting(55_SmallFanart)</visible>
        <posx>60</posx>
        <posy>100</posy>
        <control type="label" description="Title Label">
          <posy>18</posy>
          <width>600</width>
          <height>50</height>
          <aligny>bottom</aligny>
          <textcolor>Orange</textcolor>
          <font>InfoTitle</font>
          <wrapmultiline>true</wrapmultiline>
          <label>$INFO[ListItem.Label]</label>
        </control>
        <control type="textbox" description="Plot51">
          <posx>0</posx>
          <posy>120</posy>
          <width>600</width>
          <height>630</height>
          <align>left</align>
          <label>$VAR[Plots]</label>
        </control>
      </control>
      <control type="group" description="55 MediaInfo">
        <visible>Skin.HasSetting(55_SmallFanart)</visible>
        <posx>60</posx>
        <posy>100</posy>
        <control type="image" description="FA">
          <posx>0</posx>
          <posy>0</posy>
          <width>603</width>
          <height>339</height>
          <include>Icon_Fade</include>
          <texture background="true">$INFO[ListItem.Art(fanart)]</texture>
          <aspectratio aligny="top">scale</aspectratio>
        </control>
        <control type="image" description="Overlay">
          <visible>!IsEmpty(ListItem.Art(fanart))</visible>
          <posx>0</posx>
          <posy>0</posy>
          <width>603</width>
          <height>339</height>
          <include>Icon_Fade</include>
          <texture border="3">img/CoverOverlay0.png</texture>
          <aspectratio>stretch</aspectratio>
        </control>
        <control type="group" description="Fallback info">
          <visible>IsEmpty(ListItem.Art(fanart))</visible>
          <control type="label" description="Title Label">
            <posy>18</posy>
            <width>600</width>
            <height>50</height>
            <aligny>bottom</aligny>
            <textcolor>Orange</textcolor>
            <font>InfoTitle</font>
            <wrapmultiline>true</wrapmultiline>
            <label>$INFO[ListItem.Label]</label>
          </control>
          <control type="textbox" description="Plot51">
            <posx>0</posx>
            <posy>120</posy>
            <width>600</width>
            <height>630</height>
            <align>left</align>
            <label>$VAR[Plots]</label>
          </control>
        </control>
        <control type="group" description="Info with fanart">
          <visible>!IsEmpty(ListItem.Art(fanart))</visible>
          <control type="label" description="Title Label">
            <posy>400</posy>
            <width>600</width>
            <height>50</height>
            <aligny>bottom</aligny>
            <textcolor>Orange</textcolor>
            <font>InfoTitle</font>
            <wrapmultiline>true</wrapmultiline>
            <label>$INFO[ListItem.Label]</label>
          </control>
          <control type="textbox" description="Plot51">
            <posx>0</posx>
            <posy>480</posy>
            <width>600</width>
            <height>380</height>
            <align>left</align>
            <label>$VAR[Plots]</label>
          </control>
        </control>
      </control>
    </control>
    <control type="group" description="Side menu 9000 group">
      <include>9000Commons</include>
      <control type="grouplist" id="9000">
        <include>9000GrouplistParameters</include>
        <control type="button" id="3" description="Sort">
          <include>9000SysButtons</include>
        </control>
        <control type="togglebutton" id="4" description="Sort direction">
          <include>9000SysButtons</include>
          <label>$LOCALIZE[21429]:  $LOCALIZE[21430]</label>
          <altlabel>$LOCALIZE[21429]:  $LOCALIZE[21431]</altlabel>
        </control>
        <control type="button" id="8" description="Search">
          <include>9000SysButtons</include>
          <label>$LOCALIZE[137]</label>
        </control>
        <control type="button" id="697" description="Playlist">
          <!--<visible>Player.HasAudio</visible>-->
          <include>9000SysButtons</include>
          <label>$VAR[Playlist]</label>
          <onclick>ActivateWindow(MusicPlaylist)</onclick>
        </control>
        <control type="radiobutton" id="16" description="PartyMode">
          <include>9000SysButtons</include>
          <label>$LOCALIZE[589]</label>
        </control>
        <control type="button" id="698" description="Files">
          <include>9000SysButtons</include>
          <label>$LOCALIZE[1024] $LOCALIZE[744]</label>
          <onclick>ActivateWindow(MusicFiles,root)</onclick>
        </control>
        <control type="button" id="699" description="Playing">
          <enable>Player.HasMedia</enable>
          <include>9000SysButtons</include>
          <label>$LOCALIZE[16003]</label>
          <onclick>fullscreen</onclick>
        </control>
      </control>
    </control>
  </controls>
</window>