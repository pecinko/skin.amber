<window type="dialog">
  <defaultcontrol always="true">7</defaultcontrol>
  <include>OpenClose</include>
  <controls>
    <include>DimBG</include>
    <control type="group">
      <include>DialogOpenClose</include>
      <control type="image">
        <posx>230</posx>
        <posy>150</posy>
        <width>1360</width>
        <height>810</height>
        <texture>dialogs/DialogBG.png</texture>
      </control>
      <control type="group" description="Media Info">
        <include>VisibleFadeEffect</include>
        <control type="group" description="INFO">
          <posx>320</posx>
          <posy>240</posy>
          <control type="label" description="Title">
            <posy>-12</posy>
            <width>660</width>
            <font>InfoTitle</font>
            <textcolor>Orange</textcolor>
            <aligny>center</aligny>
            <height>60</height>
            <wrapmultiline>true</wrapmultiline>
            <label>$INFO[ListItem.Title]</label>
          </control>
          <control type="textbox" description="Plot Value">
            <posx>0</posx>
            <posy>69</posy>
            <width>1170</width>
            <height>198</height>
            <align>justify</align>
            <label>$INFO[ListItem.Plot]</label>
          </control>
          <control type="label">
            <posy>320</posy>
            <width>660</width>
            <height>36</height>
            <font>Details</font>
            <label>[COLOR=Grey]$LOCALIZE[142] [/COLOR]$INFO[ListItem.StartTime,, / ]$INFO[ListItem.EndTime]</label>
          </control>
          <control type="label">
            <posy>360</posy>
            <width>660</width>
            <height>36</height>
            <font>Details</font>
            <label>[COLOR=Grey]$LOCALIZE[2050]: [/COLOR]$INFO[ListItem.Duration]</label>
          </control>
          <control type="label">
            <posy>400</posy>
            <width>660</width>
            <height>36</height>
            <font>Details</font>
            <label>[COLOR=Grey]$LOCALIZE[515]: [/COLOR]$INFO[ListItem.Genre]</label>
          </control>
        </control>
      </control>
      <control type="grouplist">
        <posx>405</posx>
        <posy>810</posy>
        <width>990</width>
        <height>88</height>
        <itemgap>30</itemgap>
        <aligny>bottom</aligny>
        <align>center</align>
        <orientation>horizontal</orientation>
        <control type="button" id="5" description="Play">
          <width>300</width>
          <align>center</align>
          <label>$LOCALIZE[19165]</label>
          <altlabel>$LOCALIZE[1024]</altlabel>
        </control>
        <control type="button" id="6" description="Record">
          <width>300</width>
          <align>center</align>
          <label>-</label>
        </control>
        <control type="button" id="7" description="OK">
          <width>300</width>
          <align>center</align>
          <label>$LOCALIZE[186]</label>
        </control>
      </control>
    </control>
  </controls>
</window>