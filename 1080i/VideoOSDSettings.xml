<window>
  <defaultcontrol>5</defaultcontrol>
  <include>OSDFade</include>
  <controls>
    <control type="group">
      <posx>1020</posx>
      <posy>0</posy>
      <animation effect="fade" start="100" end="0" time="50" condition="Window.IsVisible(SliderDialog) | Window.IsVisible(FileBrowser)">Conditional</animation>
      <control type="image" description="background image">
        <posx>90</posx>
        <posy>0</posy>
        <width>810</width>
        <height>1080</height>
        <texture border="30,0,30,0">OSD/OSDBackgroundV.png</texture>
        <colordiffuse>FFE2E2E2</colordiffuse>
        <aspectratio>stretch</aspectratio>
      </control>
      <control type="label" id="2" description="Settings">
        <posx>90</posx>
        <posy>21</posy>
        <width>810</width>
        <font>InfoTitle</font>
        <textcolor>Orange</textcolor>
        <shadowcolor>Black</shadowcolor>
        <align>center</align>
      </control>
      <control type="grouplist" id="5" description="Control Area">
        <posx>117</posx>
        <posy>105</posy>
        <width>780</width>
        <height>1002</height>
        <itemgap>3</itemgap>
        <orientation>vertical</orientation>
        <pagecontrol>60</pagecontrol>
        <onup>5</onup>
        <ondown>5</ondown>
      </control>
      <control type="button" id="7">
        <textoffsetx>20</textoffsetx>
        <font>Details</font>
        <shadowcolor>Black</shadowcolor>
      </control>
      <control type="radiobutton" id="8">
        <font>Details</font>
        <shadowcolor>Black</shadowcolor>
      </control>
      <control type="spincontrolex" id="9">
        <font>Details</font>
        <shadowcolor>Black</shadowcolor>
        <reverse>yes</reverse>
      </control>
      <control type="sliderex" id="10">
        <align>left</align>
        <shadowcolor>Black</shadowcolor>
        <font>Details</font>
      </control>
    </control>
  </controls>
</window>