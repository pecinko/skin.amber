<window>
  <backgroundcolor>0</backgroundcolor>
  <allowoverlay>no</allowoverlay>
  <defaultcontrol always="true">3</defaultcontrol>
  <controls>
    <include>Settings_Art</include>
    <include>Time</include>
    <control type="group" description="Content">
      <animation effect="fade" time="250" condition="!Window.Previous(Settings.xml)">WindowOpen</animation>
      <animation effect="fade" time="250" condition="!Window.Next(Settings.xml)">WindowClose</animation>
      <control type="image">
        <include>Panel_Size</include>
        <texture>dialogs/SettingsBG.png</texture>
      </control>
      <control type="label">
        <posx>100</posx>
        <posy>120</posy>
        <width>240</width>
        <height>61</height>
        <font>Logo</font>
        <align>center</align>
        <label>XBMC</label>
      </control>
      <control type="label" id="2" description="Category label">
        <posx>650</posx>
        <posy>117</posy>
        <width>620</width>
        <height>72</height>
        <align>center</align>
        <font>InfoTitle</font>
        <textcolor>Orange</textcolor>
      </control>
      <control type="grouplist" id="3" description="Left - Button Area">
        <posx>66</posx>
        <posy>210</posy>
        <width>321</width>
        <height>780</height>
        <itemgap>0</itemgap>
        <onleft>5</onleft>
        <onright>5</onright>
        <onup>3</onup>
        <ondown>3</ondown>
        <orientation>vertical</orientation>
      </control>
      <control type="button" id="10" description="Category Button">
        <textoffsetx>10</textoffsetx>
        <focusedcolor>Orange</focusedcolor>
      </control>
      <control type="grouplist" id="5" description="Right - Control Area">
        <posx>390</posx>
        <posy>210</posy>
        <width>1467</width>
        <height>720</height>
        <itemgap>0</itemgap>
        <onleft>3</onleft>
        <onright>60</onright>
        <onup>5</onup>
        <ondown>5</ondown>
        <pagecontrol>60</pagecontrol>
        <orientation>vertical</orientation>
      </control>
      <control type="button" id="7" description="Button">
        <width>1467</width>
        <textoffsetx>42</textoffsetx>
      </control>
      <control type="radiobutton" id="8" description="Radio Button">
        <width>1467</width>
        <textoffsetx>42</textoffsetx>
      </control>
      <control type="spincontrolex" id="9" description="Spin control">
        <width>1467</width>
        <textoffsetx>42</textoffsetx>
      </control>
      <control type="scrollbar" id="60">
        <posx>81r</posx>
        <posy>234</posy>
        <width>36</width>
        <height>720</height>
        <texturesliderbackground>-</texturesliderbackground>
        <texturesliderbar>-</texturesliderbar>
        <texturesliderbarfocus>-</texturesliderbarfocus>
        <textureslidernib border="18">OSD/ScrollbarNibNF.png</textureslidernib>
        <textureslidernibfocus border="18">OSD/ScrollbarNibFO.png</textureslidernibfocus>
        <showonepage>false</showonepage>
        <orientation>vertical</orientation>
        <onleft>5</onleft>
        <onright>noop</onright>
      </control>
    </control>
  </controls>
</window>