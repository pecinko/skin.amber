      <onfocus condition="!System.HasAddon(service.skin.widgets) | Skin.HasSetting(Hide.RecentlyAdded) | Skin.HasSetting(plexbmc)">SetFocus(12)</onfocus>
      <onfocus condition="![!System.HasAddon(service.skin.widgets) | Skin.HasSetting(Hide.RecentlyAdded) | Skin.HasSetting(plexbmc)]">SetFocus(11)</onfocus>
      <visible>IsEmpty(Window(Home).Property(SkinWidgets_Running))</visible>
    </control>
    <control type="button" id="11">
      <include>HiddenButton</include>
      <onfocus>ReplaceWindow(Home)</onfocus>
      <visible>!IsEmpty(Window(Home).Property(SkinWidgets_Running))</visible>
