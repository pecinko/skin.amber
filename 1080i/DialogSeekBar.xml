<window type="dialog">
  <visible>![Window.IsVisible(SliderDialog) | Window.IsVisible(OSDVideoSettings) | Window.IsVisible(OSDAudioSettings) | Window.IsVisible(VideoBookmarks) | Window.IsActive(script-XBMC-Subtitles-main.xml)]</visible>
  <visible>Window.IsActive(DialogFullScreenInfo.xml) | Window.IsActive(videoosd.xml) | [Window.IsVisible(FullScreenVideo) + !System.IdleTime(20) + [Player.Caching | Player.Seeking | player.forwarding | player.rewinding | Player.DisplayAfterSeek | Player.Paused]]</visible>
  <include>OSDFade</include>
  <zorder>2</zorder>
  <controls>
    <control type="group" description="Top Bar">
      <control type="image" description="Background">
        <posx>0</posx>
        <posy>0</posy>
        <width>1920</width>
        <height>108</height>
        <texture flipy="true" border="0,30,0,30">OSD/OSDBackground.png</texture>
        <colordiffuse>FFE2E2E2</colordiffuse>
        <!--<colordiffuse>BBFFFFFF</colordiffuse>-->
      </control>
      <control type="label" description="Clock">
        <posx>40r</posx>
        <posy>-5</posy>
        <width>300</width>
        <height>50</height>
        <align>right</align>
        <aligny>center</aligny>
        <font>Details</font>
        <shadowcolor>Black</shadowcolor>
        <label>$INFO[System.Time]</label>
      </control>
      <control type="label" description="End Time">
        <posx>40</posx>
        <posy>-5</posy>
        <width>300</width>
        <height>50</height>
        <align>left</align>
        <aligny>center</aligny>
        <font>Details</font>
        <shadowcolor>Black</shadowcolor>
        <label>$LOCALIZE[19127][COLOR=Orange] • [/COLOR]$INFO[Player.FinishTime]</label>
      </control>
      <control type="group">
        <visible>Window.IsActive(DialogFullScreenInfo.xml) | [Player.Caching | Player.Paused | Player.Seeking | player.forwarding | player.rewinding | Player.DisplayAfterSeek | Window.IsActive(videoosd.xml)]</visible>
        <posy>10</posy>
        <control type="progress" description="Buffer Bar">
          <posx>450</posx>
          <posy>3</posy>
          <width>1020</width>
          <height>18</height>
          <texturebg border="15,0,15,0">VideoOSD/ProgressBG.png</texturebg>
          <midtexture border="15,0,15,0">VideoOSD/ProgressBar.png</midtexture>
          <info>Player.CacheLevel</info>
          <visible>Player.Caching</visible>
        </control>
        <control type="progress" id="23" description="Progress Bar">
          <posx>450</posx>
          <posy>3</posy>
          <width>1020</width>
          <height>18</height>
          <texturebg border="15,0,15,0">VideoOSD/ProgressBG.png</texturebg>
          <midtexture border="15,0,15,0">VideoOSD/ProgressBar.png</midtexture>
          <colordiffuse>Yellow</colordiffuse>
          <info>Player.Progress</info>
          <visible>true</visible>
        </control>
        <control type="label" description="Progress time label">
          <posx>420</posx>
          <posy>-5</posy>
          <height>30</height>
          <width>180</width>
          <align>right</align>
          <label>$INFO[Player.Time]</label>
          <font>Details</font>
          <shadowcolor>Black</shadowcolor>
        </control>
        <control type="label" description="Progress rem time label">
          <posx>1490</posx>
          <posy>-5</posy>
          <height>30</height>
          <width>180</width>
          <align>left</align>
          <label>$INFO[Player.TimeRemaining,-]</label>
          <font>Details</font>
          <shadowcolor>Black</shadowcolor>
        </control>
      </control>
    </control>
    <control type="group">
      <!--<animation effect="slide" start="0,0" end="0,-124" time="240" delay="150" condition="Window.IsActive(videoosd.xml)" reversible="false">Conditional</animation>
      <animation effect="slide" start="0,-124" end="0,0" time="150" condition="!Window.IsActive(videoosd.xml)" reversible="false">Conditional</animation>-->
      <posy>40</posy>
      <!--<control type="image" description="Background">
        <visible>player.forwarding | player.rewinding | Player.Paused | Player.Caching | [Player.DisplayAfterSeek + !IsEmpty(Player.SeekOffset)]</visible>
        <include>VisibleFadeEffect</include>
		<posx>618</posx>
        <posy>534</posy>
        <width>684</width>
        <height>66</height>
        <texture border="48,24,48,0">OSD/SeekBottomBar.png</texture>
      </control>-->
      <control type="label" description="Pause">
        <visible>![Player.Caching | Player.Seeking | player.forwarding | player.rewinding | Player.DisplayAfterSeek] + [Player.Paused + System.IdleTime(4)]</visible>
        <include>SeekbarLabels</include>
        <label>$LOCALIZE[112]</label>
      </control>
      <control type="label" id="24" description="Buffering label">
        <visible>[Player.Paused + Player.Caching] + !Player.Seeking</visible>
        <include>SeekbarLabels</include>
        <label>$INFO[Player.CacheLevel,$LOCALIZE[15107] ,%]</label>
      </control>
      <control type="label" description="2x RW FW label">
        <visible>player.forwarding2x | player.rewinding2x</visible>
        <include>SeekbarLabels</include>
        <label>2 X</label>
      </control>
      <control type="label" description="4x RW FW label">
        <visible>player.forwarding4x | player.rewinding4x</visible>
        <include>SeekbarLabels</include>
        <label>4 X</label>
      </control>
      <control type="label" description="8x RW FW label">
        <visible>player.forwarding8x | player.rewinding8x</visible>
        <include>SeekbarLabels</include>
        <label>8 X</label>
      </control>
      <control type="label" description="16x RW FW label">
        <visible>player.forwarding16x | player.rewinding16x</visible>
        <include>SeekbarLabels</include>
        <label>16 X</label>
      </control>
      <control type="label" description="32x RW FW label">
        <visible>player.forwarding32x | player.rewinding32x</visible>
        <include>SeekbarLabels</include>
        <label>32 X</label>
      </control>
      <control type="label" description="Seek time label">
        <visible>![player.forwarding | player.rewinding]</visible>
        <visible>Player.DisplayAfterSeek</visible>
        <include>SeekbarLabels</include>
        <label>$INFO[Player.SeekOffset,$LOCALIZE[773] ]</label>
      </control>
      <control type="label" description="Seek time label">
        <visible>![Window.IsActive(DialogFullScreenInfo.xml) | Player.Caching | Player.Seeking | player.forwarding | player.rewinding | Player.DisplayAfterSeek | [Player.Paused + System.IdleTime(4)]]</visible>
        <include>SeekbarLabels</include>
        <label>$INFO[VideoPlayer.TVShowTitle]$INFO[VideoPlayer.Season,[COLOR=Orange]  •  [/COLOR]$LOCALIZE[31973],.]$INFO[VideoPlayer.Episode,,[COLOR=Orange]  •  [/COLOR]]$INFO[VideoPlayer.ChannelNumber,,.]$INFO[VideoPlayer.ChannelName,,: ]$INFO[VideoPlayer.Artist,, - ]$INFO[VideoPlayer.Album,, - ]$INFO[VideoPlayer.Title]</label>
      </control>
    </control>
  </controls>
</window>